@Library('piper-lib-os') _

def Branch = ""

pipeline {

    agent any

    stages {
        stage("prepare") {
            steps {
                deleteDir()
                checkout scm
                setupCommonPipelineEnvironment script: this
                
                BRANCH = $env.GIT_BRANCH
                         
             	  echo "$JOB_NAME"
             	  echo "$BRANCH"      
            					}
          	     }
         stage('build') {
            steps {
               mtaBuild script: this, mtaBuildTool: 'cloudMbt'
            }
        }
    
        stage('Nexus deploy'){
        	when{
        	    expression{
        	        $env.GIT_BRANCH == 'origin/master'
        	    }

        	}

           	steps{
           	// BUILD_NUMBER && JOB_NAME im statement           	
        	    nexusPublisher nexusInstanceId: 'localnexus', nexusRepositoryId: 'maven-releases', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: '/var/jenkins_home/workspace/$JOB_NAME/ci_test_project.mtar']], mavenCoordinate: [artifactId: 'jenkins-mtar', groupId: 'org.jenkins-CF.main', packaging: '.mtar', version: '1.$BUILD_NUMBER']]]
        	}
		}
		    stage('deploy'){
        
        	when{
        	    expression{  
        	    
        	        BRANCH == 'origin/Cf_develop'
        	    }

        	}
        	steps{
    			cloudFoundryDeploy script:this, deployTool:'mtaDeployPlugin', verbose: true
			}
        }
    }
}
